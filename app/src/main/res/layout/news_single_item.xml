<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/subItemDiscover"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:background="@color/white"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layoutSingleProject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivImage"
                    android:layout_width="match_parent"
                    android:layout_height="213dp"
                    android:adjustViewBounds="true"
                    android:background="@color/black"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@+id/ivImage"
                    android:layout_alignBottom="@id/ivImage"
                    android:layout_marginTop="-60dp"
                    android:background="@drawable/gradientupword"
                    android:gravity="bottom"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp">


                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/btn_explore_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/ivImage"
                    android:layout_marginBottom="10dp"
                    android:gravity="right"
                    android:orientation="vertical">


                    <com.example.ajithtasknewsapp.MyTextView
                        android:id="@+id/tvtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/ivImage"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/shape_date"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:maxLines="1"
                        android:text="2019-11-23"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/black_overlay"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:textSize="11sp"
                        app:textFont="OpenSans-Regular" />

                    <com.example.ajithtasknewsapp.MyTextView
                        android:id="@+id/tvAutor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="right|center"
                        android:paddingRight="10dp"
                        android:maxLines="1"
                        android:text="Marshall Cohen and Olanma Mang, CNN"
                        android:layout_gravity="right"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        app:textFont="OpenSans-SemiBold" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">
            <com.example.ajithtasknewsapp.MyTextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Title"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:textFont="OpenSans-SemiBold" />

            <com.example.ajithtasknewsapp.MyTextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                android:maxLines="5"
                android:text="description"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:textFont="OpenSans-Regular" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>